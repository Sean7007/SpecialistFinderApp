<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBackground">

<!--     <ImageView-->
<!--         android:src="@drawable/logo"-->
<!--         android:layout_gravity="center_horizontal"-->
<!--         android:layout_width="wrap_content"-->
<!--         android:layout_height="wrap_content"/>-->

     <LinearLayout
         android:orientation="vertical"
         android:padding="8dp"
         android:background="@drawable/rounded_dialog"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

          <TextView
               android:text="Thank you for booking our services!!"
               android:textAllCaps="true"
               android:textSize="18sp"
               android:fontFamily="@font/bellerose"
               android:textStyle="bold"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

          <TextView
              android:text="Booking Information"
              android:textAllCaps="true"
              android:fontFamily="@font/bellerose"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

               <ImageView
                   android:src="@drawable/ic_book"
                   android:layout_gravity="bottom"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/txt_booking_time_text"
                   android:text="10h00 at 28/03/2019"
                   android:textSize="14sp"
                   android:layout_marginLeft="4dp"
                   android:fontFamily="@font/bellerose"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
          </LinearLayout>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

               <ImageView
                   android:src="@drawable/ic_account_circle_black_24dp"
                   android:layout_gravity="bottom"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/txt_booking_doctor_text"
                   android:text="Sean Hamathi"
                   android:textSize="14sp"
                   android:layout_marginLeft="4dp"
                   android:fontFamily="@font/bellerose"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
          </LinearLayout>


          <View
              android:layout_marginTop="4dp"
              android:background="@android:color/background_dark"
              android:layout_width="match_parent"
              android:layout_height="1dp" />

          <TextView
              android:id="@+id/txt_hospital_name"
              android:text="Hospital # 1"
              android:textAllCaps="true"
              android:fontFamily="@font/bellerose"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

               <ImageView
                   android:src="@drawable/ic_web"
                   android:layout_gravity="bottom"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/txt_hospital_website"
                   android:text="http://www.specilialistfinder.com"
                   android:textSize="14sp"
                   android:layout_marginLeft="4dp"
                   android:fontFamily="@font/bellerose"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
          </LinearLayout>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

               <ImageView
                   android:src="@drawable/ic_local_phone_black_24dp"
                   android:layout_gravity="bottom"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/txt_hospital_phone"
                   android:text="+267-74655228"
                   android:textSize="14sp"
                   android:layout_marginLeft="4dp"
                   android:fontFamily="@font/bellerose"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
          </LinearLayout>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

               <ImageView
                   android:src="@drawable/ic_access_time_black_24dp"
                   android:layout_gravity="bottom"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/txt_hospital_open_hours"
                   android:text="09h00 - 19h00"
                   android:textSize="14sp"
                   android:layout_marginLeft="4dp"
                   android:fontFamily="@font/bellerose"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
          </LinearLayout>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

               <ImageView
                   android:src="@drawable/ic_add_location_black_24dp"
                   android:layout_gravity="bottom"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/txt_hospital_address"
                   android:text="Address of Hospital # 1"
                   android:textSize="14sp"
                   android:layout_marginLeft="4dp"
                   android:fontFamily="@font/bellerose"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
          </LinearLayout>

          <Button
               android:id="@+id/btn_confirm"
               android:text="CONFIRM"
               android:layout_marginTop="8dp"
               android:background="@color/quantum_bluegrey950"
               android:textColor="@android:color/white"
               android:fontFamily="@font/bellerose"
               android:layout_centerHorizontal="true"
              android:layout_above = "@+id/txt_skip"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>


     </LinearLayout>


</LinearLayout>